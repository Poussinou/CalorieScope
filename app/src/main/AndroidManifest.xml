<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dynamicsoft.caloriescope"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewsActivity"
            android:label="@string/News"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CalculatorActivity"
            android:label="@string/Calculator"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HeartRateSensorActivity"
            android:label="@string/Heart_Rate"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HeartRateCameraActivity"
            android:label="@string/Heart_Rate"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.HearingWellbeingActivity"
            android:label="@string/Hearing_Wellbeing"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.VideosActivity"
            android:label="@string/videos"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.DietManagerActivity"
            android:label="@string/Diet_Manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.FoodSuggestionsActivity"
            android:label="@string/Food_Suggestions"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.ExerciseActivity"
            android:label="@string/Exercise"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.DrinksActivity"
            android:label="@string/Drinks"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.DrinksDetailActivity"
            android:label="@string/Drinks_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.DietPlanActivity"
            android:label="@string/Diet_Plan"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.DietPlanDetailsActivity"
            android:label="@string/Diet_Plan"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dietManager.AddPlanActivity"
            android:label="@string/Diet_Plan"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.RemindersActivity"
            android:label="@string/Reminder" />
        <activity
            android:name=".reminder.EditAlarmActivity"
            android:label="@string/AddReminder" />

        <activity android:name=".dietManager.ExerciseAddPlansActivity"
            android:label="@string/AddExercise" />

        <receiver
            android:name=".reminder.AlarmReceiver"
            android:process=":remote" />

        <service android:name=".services.BackgroundService" />
    </application>

</manifest>