<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_bg"
        android:orientation="vertical"
        tools:context="org.dynamicsoft.caloriescope.activities.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/running_girl" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="210sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardBackgroundColor="@color/purple_bg">

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:gravity="center"
                android:text="@string/Lets_Start"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/CalorieView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="120sp"
                android:layout_marginBottom="20sp"
                android:background="@color/purple_bg"
                android:text="@string/Walk"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120sp"
                android:layout_marginBottom="20sp"
                android:background="@color/purple_bg"
                android:text="@string/Rest"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="120sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="20sp"
                android:background="@color/purple_bg"
                android:text=" Clear "
                android:textColor="@color/white"
                android:visibility="invisible" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="410sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            app:cardBackgroundColor="@color/purple_bg">

            <ImageButton
                android:id="@+id/addWater"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:adjustViewBounds="true"
                android:background="@color/purple_bg"
                android:scaleType="fitCenter"
                android:src="@drawable/water" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="155sp"
                android:gravity="center"
                android:text="@string/Water"
                android:textColor="@color/water" />

            <TextView
                android:id="@+id/waterQuantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170sp"
                android:gravity="center_horizontal"
                android:textColor="@color/water" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180sp"
                android:gravity="center"
                android:text="@string/PlusSymbol"
                android:textColor="@color/water"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/currentWaterValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80sp"
                android:gravity="center_horizontal"
                android:text="@string/numeral_0"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="410sp"
            android:layout_marginBottom="10sp"
            app:cardBackgroundColor="@color/purple_bg">

            <ImageButton
                android:id="@+id/addCaffeine"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:adjustViewBounds="true"
                android:background="@color/purple_bg"
                android:scaleType="fitCenter"
                android:src="@drawable/caffeine" />

            <TextView
                android:id="@+id/currentCaffeineValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80sp"
                android:gravity="center_horizontal"
                android:text="@string/numeral_0"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="155sp"
                android:gravity="center"
                android:text="@string/Caffeine"
                android:textColor="@color/caffeine" />

            <TextView
                android:id="@+id/caffeineQuantity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170sp"
                android:gravity="center_horizontal"
                android:textColor="@color/caffeine" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180sp"
                android:gravity="center"
                android:text="@string/PlusSymbol"
                android:textColor="@color/caffeine"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnClearFluidIntake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="630sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@color/purple_bg"
            android:text="@string/Clear_Fluid_Intake"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>