<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.dynamicsoft.healthometer.SettingsActivity"
    android:background="@color/appBackground"
    tools:showIn="@layout/activity_settings">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/SenstivityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="15sp"
        android:text="Senstivity: 30"/>

    <SeekBar
        android:id="@+id/SenstivitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/SaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/white"
        android:text="Save"/>

    <Button
        android:id="@+id/LoadDefaults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="113sp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/white"
        android:text="Load Defaults"/>

    <Button
        android:id="@+id/ClearAppData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="157sp"
        android:textColor="@color/red"
        android:background="@color/white"
        android:text="Clear App Data"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>