<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.dynamicsoft.caloriescope.SettingsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/SenstivityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/SenstivitySeekBar"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/SaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72sp"
            android:background="@color/white"
            android:text="@string/Save"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/LoadDefaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115sp"
            android:background="@color/white"
            android:text="@string/Load_Defaults"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/ClearAppData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="159sp"
            android:background="@color/white"
            android:text="@string/Clear_App_Data"
            android:textColor="@color/red" />

    </android.support.v7.widget.CardView>

</RelativeLayout>