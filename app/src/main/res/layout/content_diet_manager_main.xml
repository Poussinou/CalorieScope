<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_marginTop="?attr/actionBarSize">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ActivityDietManager"
        tools:showIn="@layout/app_bar_diet_manager_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:contentDescription="@string/vegetables_image"
                android:src="@drawable/diet_manager_diet_header" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="165sp"
                android:layout_height="148sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="223sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/diet_plan"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/diet_plan_icon"
                    android:src="@drawable/ic_diet_manager_diet" />

                <TextView
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="120sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/Diet_Plan"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="175sp"
                android:layout_height="148sp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="223sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:layout_toEndOf="@+id/card1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimary">


                <ImageButton
                    android:id="@+id/suggest"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/food_suggestions_icon"
                    android:focusable="true"
                    android:src="@drawable/ic_diet_manager_salad" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="120sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/Food_Suggestions"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                android:layout_width="165sp"
                android:layout_height="148sp"
                android:layout_below="@+id/card1"
                android:layout_marginStart="10sp"
                android:layout_marginTop="7sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/simpleexercise"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/exercise_icon"
                    android:focusable="true"
                    android:src="@drawable/ic_diet_manager_exercise" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="120sp"
                    android:gravity="center"
                    android:text="@string/Exercise"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_width="175sp"
                android:layout_height="148sp"
                android:layout_below="@+id/card2"
                android:layout_marginStart="5sp"
                android:layout_marginTop="7sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:layout_toEndOf="@+id/card1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/fatdrink"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/fat_drink_icon"
                    android:focusable="true"
                    android:src="@drawable/ic_diet_manager_glass" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="120sp"
                    android:gravity="center"
                    android:text="@string/Fat_Burning_Drinks"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>